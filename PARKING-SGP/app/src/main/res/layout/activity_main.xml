<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/db1_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txtMessage"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:layout_weight="0"
            android:textAppearance="?android:attr/textAppearanceLarge" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="160dip"
                android:layout_gravity="center_horizontal|center"
                android:textColor="#FFFFFF"
                android:textSize="35sp"
                android:background="@drawable/buttonshape"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:id="@+id/btnOpenPkg"
                android:text="Abrir Parking"
                android:checked="true"
                android:enabled="true"
                android:onClick="btnOpenPkgOnClick"/>

            <TextView
                android:id="@+id/txtMessageSep1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=""
                android:layout_weight="0"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/txtMessageSep2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=""
                android:layout_weight="0"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dip"
                android:layout_gravity="center_horizontal|center"
                android:textSize="20sp"
                android:id="@+id/btnAlarmOn"
                android:text="Activa Alarma"
                android:checked="true"
                android:enabled="true"
                android:onClick="btnAlarmOnClick"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dip"
                android:layout_gravity="center_horizontal|center"
                android:textSize="20sp"
                android:id="@+id/btnAlarmOff"
                android:text="DESactiva Alarma"
                android:checked="true"
                android:enabled="true"
                android:onClick="btnAlarmOffClick"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dip"
                android:layout_gravity="center_horizontal|center"
                android:textSize="20sp"
                android:id="@+id/btnMusic"
                android:text="Musica"
                android:checked="true"
                android:enabled="true"
                android:onClick="btnMusicClick"/>


    <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:gravity="center|bottom"
                android:orientation="vertical" >

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="60dip"
                    android:layout_gravity="center_horizontal|center"
                    android:textSize="20sp"
                    android:id="@+id/btnClose"
                    android:text="Cerrar"
                    android:checked="true"
                    android:enabled="true"
                    android:onClick="btnCloseOnClick"/>

                <TextView
                    android:id="@+id/txtMessageClose"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=""
                    android:layout_weight="0"
                    android:textAppearance="?android:attr/textAppearanceLarge" />
            </LinearLayout>
</LinearLayout>

